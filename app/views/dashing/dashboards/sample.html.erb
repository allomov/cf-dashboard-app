<% content_for :title do %>
  Altoros Demo: Continuous App Delivery on Cloud Foundry with Github, Jenkins and Autoscaling
<% end %>

<script type="text/javascript">
  timerStart = Date.now();
  $(document).ready(function(){
    var time = Date.now() - timerStart;
    timer = $('#load-timer');
    timer.find('.seconds').text(time/1000);
    timer.fadeIn();
  });
</script>


<div class="gridster">
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="welcome" data-view="AltorosLogo" style="background-color: #ddd"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="cpu-meter" data-view="Meter" data-title="CPU Load, %" data-min="0" data-max="100"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="mem-meter" data-view="Meter" data-title="Memory Utilization, MB" data-min="0" data-max="1024" style='background-color: #3BA95C'></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="deployed-at" data-view="Text" data-title="Hello Huawei! Continuous App Delivery on Cloud Foundry with Github, Jenkins and Autoscaling. Deployed/updated by Jenkins on:" style='background-color: #3A74C'></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1" style='background-color: #fff'>
      <div data-id="total-instances" data-view="Number" data-title="Total Instances Count" style='background-color: #F3A74C'></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="running-instances" data-title="Running Instances Count" data-view="Number"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="instances-information" data-view="InstancesInformation" data-title="Instances"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="cpu-average" data-view="MetricsGraph" data-title="CPU Load Average" style="background-color: #6A3DE9"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="current-connections" data-view="Number" data-title="Current Connections" style="background-color: #3A74C"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total-connections" data-view="Number" data-title="Total Count of Requests" style="background-color: #3A74C"></div>
    </li>

  </ul>
</div>


<div style="margin: 5px auto; text-align: center; font-size: 0.8em; color: #777; display: none" id='load-timer'>
  Application loaded in <span class='seconds'></span> seconds.
</div>

